<%- include('header', {title: 'BigPP - Change Order Page'}) -%>

<ul style="float: right; padding: 50;" class="flex">
    <li style="position: absolute; left: 0" class="logo">
      <a href="/">BigPP</a>
    </li>
    <li class="links">
      <a href="/orders">Orders</a>
    </li>
    <li class="links">
      <a href="/logout">Log Out</a>
    </li>
  </ul>
  <ul>
    <li class="ulogo">
      <p>
        The PC Parts
      </p>
      <p>
        You Need
      </p>
    </li>
  </ul>

  <div style="position:fixed; margin-left: 37.5%; margin-top: 12.5%;">
    <form action="/orders/edit/<%= orderid %>" method="post">
      <div class="mb-3">
        <label class="login" for="CPU">
          CPU
        </label>
        <input class="rounded w-full py-2 px-3 leading-tight" id="username" name="CPU"/>
      </div>
      <div class="mb-3">
        <label class="login" for="VGA">
          VGA
        </label>
        <input class="rounded w-full py-2 px-3 leading-tight" id="username" name="VGA"/>
      </div>
      <div class="mb-3">
        <label class="login" for="RAM">
          RAM
        </label>
        <input class="rounded w-full py-2 px-3 leading-tight" id="username" name="RAM"/>
      </div>
      <div class="mb-3">
          <label class="login" for="PSU">
            PSU
          </label>
          <input class="rounded w-full py-2 px-3 leading-tight" id="username" name="PSU"/>
        </div>
      <div class="flex items-center justify-between">
        <button class="loginbutton">
          Change Order
        </button>
      </div>
    </form>
  </div>

  <li style="position: absolute; left: 0; bottom: 25; padding: 50; font-size: 30;" class="ulogo">
    <a>Logged In as: <%= linuser %> </a>
</li>

<%- include('footer') -%>